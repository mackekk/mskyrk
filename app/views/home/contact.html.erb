<h1>Kontakta mig</h1>

<div class="contact-container">
  <div class="contact-info">
    <h2>Kontaktinformation</h2>
    <p>Email: [marcus.kyrk2@gmail.com]</p>
    <p>LinkedIn: [https://www.linkedin.com/in/marcuskyrk/]</p>
    <p>GitHub: [https://github.com/mackekk/]</p>
  </div>

  <div class="contact-form">
    <h2>Skicka meddelande</h2>
    <%= form_with(url: contact_path, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :name, "Namn" %>
        <%= form.text_field :name, required: true %>
      </div>

      <div class="form-group">
        <%= form.label :email, "Email" %>
        <%= form.email_field :email, required: true %>
      </div>

      <div class="form-group">
        <%= form.label :message, "Meddelande" %>
        <%= form.text_area :message, required: true %>
      </div>

      <%= form.submit "Skicka", class: "submit-button" %>
    <% end %>
  </div>
</div> 